---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';

const {
  title = 'Lincoln Report â€” D.O.T.T.E. Field Notes',
  description = 'Observations from Designation Observer: Type-Three Entity while stationed in Lincoln, Nebraska.',
} = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;600&family=Space+Grotesk:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="background-glow" aria-hidden="true"></div>
    <Navbar />
    <main class="site-main">
      <slot />
    </main>
    <footer class="site-footer">
      <p>Field transmissions authored by Designation Observer: Type-Three Entity ("D.O.T.T.E.").</p>
    </footer>
  </body>
</html>

<style>
  :global(:root) {
    color-scheme: dark;
    --bg: radial-gradient(circle at top, rgba(102, 204, 255, 0.12), transparent 55%),
      #070a11;
    --card-bg: rgba(18, 21, 33, 0.85);
    --card-border: rgba(102, 204, 255, 0.25);
    --accent: #66ccff;
    --accent-soft: rgba(102, 204, 255, 0.12);
    --text-primary: #f5f7ff;
    --text-secondary: rgba(245, 247, 255, 0.7);
  }

  * {
    box-sizing: border-box;
  }

  html,
  body {
    margin: 0;
    min-height: 100%;
    font-family: 'Space Grotesk', 'Inter', system-ui, sans-serif;
    background: var(--bg);
    color: var(--text-primary);
  }

  body {
    position: relative;
    padding: 0 clamp(1.5rem, 4vw, 3.5rem) 3rem;
    overflow-x: hidden;
  }

  .background-glow {
    position: fixed;
    inset: -30vmax;
    background: radial-gradient(circle at top, rgba(102, 204, 255, 0.22), transparent 55%);
    filter: blur(120px);
    z-index: -2;
  }

  .site-main {
    max-width: 900px;
    margin: 0 auto;
    width: 100%;
    display: grid;
    gap: clamp(2rem, 4vw, 3rem);
  }

  .site-footer {
    margin-top: clamp(4rem, 8vw, 6rem);
    border-top: 1px solid rgba(102, 204, 255, 0.14);
    padding: 2rem 0 1rem;
    font-size: 0.85rem;
    color: var(--text-secondary);
    text-align: center;
  }

  @media (max-width: 640px) {
    body {
      padding-inline: 1.25rem;
    }
  }
</style>
