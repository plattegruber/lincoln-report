---
interface TransmissionMessageProps {
  speaker: string;
  content?: string;
}

const { speaker, content } = Astro.props as TransmissionMessageProps;
---

<div class="rounded-xl border border-white/15 bg-white/5 px-5 py-4 text-sm text-slate-100 shadow-[inset_0_1px_0_rgba(255,255,255,0.08)] backdrop-blur">
  <p class="m-0 font-mono text-[0.65rem] uppercase tracking-[0.42em] text-cyan-200">{speaker}</p>
  {content ? (
    <div class="mt-3 text-base leading-relaxed text-white/90" set:html={content}></div>
  ) : (
    <div class="mt-3 text-base leading-relaxed text-white/90">
      <slot />
    </div>
  )}
</div>
