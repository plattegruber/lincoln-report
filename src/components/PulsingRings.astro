---
interface PulsingRingsProps {
  ringCount?: number;
  className?: string;
}

const { ringCount = 28, className = '' } = Astro.props as PulsingRingsProps;
const radii = Array.from({ length: ringCount }, (_, index) => index * 12 + 8);
---

<div class={`pointer-events-none ${className}`}>
  <svg
    viewBox="0 0 500 500"
    role="presentation"
    aria-hidden="true"
    class="h-full w-full drop-shadow-[0_0_25px_rgba(14,165,233,0.3)]"
  >
    {radii.map((radius, index) => (
      <circle
        cx="250"
        cy="250"
        r={radius}
        class="ring"
        style={`--delay: ${index * 80}ms`}
      />
    ))}
  </svg>
</div>

<style>
  .ring {
    fill: none;
    stroke: rgba(255, 255, 255, 0.3);
    stroke-width: 1.25;
    transform-origin: center;
    animation: ringPulse 2.5s ease-in-out infinite;
    animation-delay: var(--delay);
    opacity: 0.35;
  }

  @keyframes ringPulse {
    0% {
      transform: scale(1);
      stroke-opacity: 0.2;
    }
    50% {
      transform: scale(1.08);
      stroke-opacity: 0.5;
    }
    100% {
      transform: scale(1);
      stroke-opacity: 0.2;
    }
  }
</style>
